<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AlertsFragment"
    android:theme="@style/Theme.Controlit.Home"
    android:background="#E4E4E4">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="#3D8ECACD"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">


                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/lato"
                        android:text="Make sure to to clean the oven!"
                        android:textSize="19sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="#3D8ECACD"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">


                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/lato"
                    android:text="Your PC needs a service this month!"
                    android:textSize="19sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="#3D8ECACD"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">


                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/lato"
                    android:text="Swap the blades of your hair-trimmer this week!"
                    android:textSize="19sp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#00C5C5"
        android:textColor="@color/white"
        android:text="Clear All"
        app:cornerRadius="20dp" />



</RelativeLayout>