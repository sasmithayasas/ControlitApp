<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountFragment"
    android:theme="@style/Theme.Controlit.Home"
    android:background="#E4E4E4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="20dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/profile_picture" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="14dp"
                        android:layout_toEndOf="@+id/imageView5"
                        android:fontFamily="@font/lato"
                        android:text="Yasas"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView6"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/imageView5"
                        android:fontFamily="@font/lato"
                        android:text="Developer" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#353535"
                        app:cornerRadius="5dp"
                        app:icon="@drawable/arrow___right"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="#FFFFFF" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/lato"
                android:text="My Expenses"
                android:textSize="20sp" />


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_below="@id/textView10">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#5251E8F1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/lato"
                            android:text="Phone"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="98dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/smarphone_icon" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="78dp"
                            android:layout_height="91dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="41dp"
                            android:fontFamily="@font/lato"
                            android:text="Warranty expires: 18/05/2026"
                            android:textSize="13sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#5251E8F1"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="21dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/lato"
                            android:text="Tablet"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="90dp"
                            android:layout_marginTop="7dp"
                            android:scaleX="1.5"
                            android:scaleY="1.5"
                            android:src="@drawable/tablet_icon" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="78dp"
                            android:layout_height="91dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="41dp"
                            android:fontFamily="@font/lato"
                            android:text="Warranty expires: 21/07/2025"
                            android:textSize="13sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>