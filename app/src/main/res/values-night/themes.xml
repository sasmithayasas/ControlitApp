<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Controlit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Controlit" parent="Base.Theme.Controlit" >
    </style>

    <style name="Theme.Controlit.splash" parent="Base.Theme.Controlit" >
        <item name="android:background">#008080</item>
        <item name="android:textColor">@color/white</item>
        <item name="buttonStyle">@style/SplashButtonStyle</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SplashButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">#042628</item>
        <item name="android:fontFamily">@font/albert_sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Controlit.signup" parent="Base.Theme.Controlit" >
        <item name="android:background">#00C5C5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/albert_sans</item>
        <item name="buttonStyle">@style/SplashButtonStyle</item>
        <item name="textInputStyle">@style/customTextInputStyle</item>
    </style>
    <style name="customTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/albert_sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:background">@drawable/rounded_edittext_background_night</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SignupButtonStyle" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/albert_sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Theme.Controlit.Additem" parent="Base.Theme.Controlit">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textColor">@color/black</item>
        <item name="cardBackgroundColor">#5251E8F1</item>
        <item name="android:editTextStyle">@style/Theme.Controlit.Additem.Edittext</item>
        <item name="editTextStyle">@style/Theme.Controlit.Additem.Edittext</item>
    </style>

    <style name="Theme.Controlit.Additem.Edittext" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:backgroundTint">#000000</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

</resources>